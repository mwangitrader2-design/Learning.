# 1. Create root index.html (already did, but let's ensure it's correct)
cat > index.html << 'EOF'
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Learning App</title>
  </head>
  <body>
    <div id="root"></div>
    <script type="module" src="/src/main.jsx"></script>
  </body>
</html>
EOF

# 2. Create src/main.jsx entry point
mkdir -p src
cat > src/main.jsx << 'EOF'
import React from 'react'
import ReactDOM from 'react-dom/client'
import App from '../App.jsx'  // or './App.jsx' if App.jsx is in src/
import './index.css'

ReactDOM.createRoot(document.getElementById('root')).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>,
)
EOF

# 3. Create basic App.jsx if missing
cat > App.jsx << 'EOF'
import { useState } from 'react'
import './index.css'

function App() {
  const [count, setCount] = useState(0)

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center p-8">
      <div className="bg-white/20 backdrop-blur-lg rounded-3xl p-12 text-center shadow-2xl max-w-md w-full">
        <h1 className="text-4xl font-bold text-white mb-8">Learning App</h1>
        <div className="text-2xl font-mono text-white/90 mb-8 p-6 bg-black/20 rounded-2xl">
          Count: {count}
        </div>
        <div className="space-x-4">
          <button 
            className="px-8 py-3 bg-white/20 hover:bg-white/30 rounded-xl font-semibold text-white transition-all duration-300"
            onClick={() => setCount(count + 1)}
          >
            +1
          </button>
          <button 
            className="px-8 py-3 bg-white/20 hover:bg-white/30 rounded-xl font-semibold text-white transition-all duration-300"
            onClick={() => setCount(0)}
          >
            Reset
          </button>
        </div>
        <p className="mt-8 text-white/70 text-sm">Vite + React + TailwindCSS</p>
      </div>
    </div>
  )
}

export default App
EOF
